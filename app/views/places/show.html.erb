<% if @user != nil%>

<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<div class = "row">
  <% for entry in @entries %>
    <div class = "col-12 col-sm-6 col-md-6 col-lg-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
      <% if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= entry["image"] %>" class="img-fluid">
      <% end %>
    </div>
  <% end %>
</div>

<div class="grid gap-3">
  <div class="p-2 g-col-6">
     <a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>" role="button">New Entry</a>
  </div>
  <div class="p-2 g-col-6">
    <a class="btn btn-primary" href="/places" role="button">Back to All Places</a>
  </div>
</div>

<% else %>

<a href = "/login">Login to see this place.</a>

<% end %>